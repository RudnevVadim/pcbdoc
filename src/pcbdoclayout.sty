\newcommand{\PcbDocLayoutSet}{%
  \setcounter{LeftMargin}{\pcbdocpaperleftmargin}%
  \setcounter{RightMargin}{\pcbdocpaperrightmargin}%
  \setcounter{TopMargin}{\pcbdocpapertopmargin}%
  \setcounter{BottomMargin}{\pcbdocpaperbottommargin}%
  \setcounter{BorderWidth}{\pcbdocpaperwidth - \pcbdocpaperrightmargin - \pcbdocpaperleftmargin}%
  \setcounter{BorderHeight}{\pcbdocpaperheight - \pcbdocpaperbottommargin - \pcbdocpapertopmargin}%!!!
  \setcounter{DeltaWidth}{\pcbdocpaperdeltawidth}%
  \setcounter{DeltaHeight}{\pcbdocpaperdeltaheight}%
  \setcounter{LeftMargin}{\value{LeftMargin}/186467}%
  \setcounter{RightMargin}{\value{RightMargin}/186467}%
  \setcounter{TopMargin}{\value{TopMargin}/186467}%
  \setcounter{BottomMargin}{\value{BottomMargin}/186467}%
  \setcounter{BorderWidth}{\value{BorderWidth}/186467}%
  \setcounter{BorderHeight}{\value{BorderHeight}/186467}%
  \setcounter{DeltaWidth}{\value{DeltaWidth}/186467}%
  \setcounter{DeltaHeight}{\value{DeltaHeight}/186467}%
  \setcounter{xStamp}{\value{BorderWidth}}%
  \addtocounter{xStamp}{-185}%
  \addtocounter{xStamp}{\value{DeltaWidth}}%
  \setlength{\topmargin}{\pcbdocpapertopmargin - \pcbdocpaperdeltaheight}%

  \setlength{\headsep}{0mm}%
  \setlength{\footskip}{0mm}%

  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
  \ifthenelse{\equal{\pcbdoctype}{spec}}{%
    \setlength{\headsep}{16.5mm}%
    \setlength{\footskip}{15mm}}{}%
  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
  \ifthenelse{\equal{\pcbdoctype}{pe}}{%
    \setlength{\headsep}{16.5mm}%
    \setlength{\footskip}{15mm}}{}%
  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
  \ifthenelse{\equal{\pcbdoctype}{in}}{%
    \setlength{\headsep}{0mm}%
    \setlength{\footskip}{15mm}}{}%
  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

  \setlength{\hoffset}{-25.4mm}%
  \setlength{\voffset}{-25.4mm}%
  \setlength{\oddsidemargin}{\pcbdocpaperleftmargin - \pcbdocpaperdeltawidth}%
  \setlength{\headheight}{0mm}%???
  \setlength{\textwidth}{%
    \pcbdocpaperwidth -%
    \pcbdocpaperleftmargin -%
    \pcbdocpaperrightmargin +%
    \pcbdocpaperdeltawidth +%
    \pcbdocpaperdeltawidth%
    }%
  \setlength{\textheight}{%!!!
    \pcbdocpaperheight -%
    \pcbdocpapertopmargin -%
    \pcbdocpaperbottommargin -%
    \footskip - \headheight +%
    \pcbdocpaperdeltaheight +%
    \pcbdocpaperdeltaheight -%
    \headsep%
    }%
  \marginparsep=0mm%
  \marginparwidth=0mm%
  \marginparpush=0mm%
  }%
